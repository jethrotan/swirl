#!/bin/sh
# postrm script for swirl
#
# see: dh_installdeb(1)


# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

set -e

case "$1" in
    purge)
        rm -f /etc/default/swirl

        # ensure we remove the rc.d scripts installed by postinst
        update-rc.d swirl remove >/dev/null

        if [ -d /var/lib/swirl ]; then
                rm -r /var/lib/swirl
        fi
        if [ -d /var/log/swirl ]; then
                rm -r /var/log/swirl
        fi
        if [ -d /var/run/swirl ]; then
                rm -r /var/run/swirl
        fi
        if [ -d /etc/swirl ]; then
                rm -r /etc/swirl
        fi
        if [ -e /etc/init.d/swirl ]; then
                rm  /etc/init.d/swirl
        fi
        # Remove User & Group, killing any process owned by them
        if getent passwd swirl >/dev/null; then
                pkill -u swirl || true
                deluser --quiet --system swirl
        fi
        if getent group swirl >/dev/null; then
                delgroup --quiet --system --only-if-empty swirl || true
        fi
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1\`" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.



exit 0
